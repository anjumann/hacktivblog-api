generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  email     String    @unique
  name      String?
  posts     Post[]
  Events    Events[]
  Podcast   Podcast[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  postId    String   @unique @default(uuid())
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  String?  @db.ObjectId
}

model Events {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  date        String?
  time        String?
  location    String?
  author      User?    @relation(fields: [authorId], references: [id])
  authorId    String?  @db.ObjectId
}

model Podcast {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  content     String?
  youtubeLink String
  author      User?    @relation(fields: [authorId], references: [id])
  authorId    String?  @db.ObjectId
}
